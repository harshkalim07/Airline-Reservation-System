# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=production

# Security Keys (Generate your own!)
SECRET_KEY=your-super-secret-production-key-change-this-now-$(openssl rand -hex 32)
JWT_SECRET_KEY=your-jwt-secret-production-key-change-this-now-$(openssl rand -hex 32)

# JWT Token Expiration (24 hours in seconds)
JWT_ACCESS_TOKEN_EXPIRES=86400

# Database Configuration
DATABASE_URL=sqlite:///airline.db
# For production PostgreSQL use:
# DATABASE_URL=postgresql://username:password@localhost:5432/airline_db

# CORS - Frontend URL
FRONTEND_URL=http://localhost:5173
# For production use your actual domain:
# FRONTEND_URL=https://yourdomain.com

# Admin Secret Key
ADMIN_SECRET_KEY=ADMIN123